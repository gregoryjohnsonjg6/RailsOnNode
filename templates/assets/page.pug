<!DOCTYPE html5>
html(lang="en")
    head
        include ./utils/meta.pug
        title node-railsJS
        if process.env.NODE_ENV === 'production'
            link(rel='stylesheet', type='text/css', href=`/assets/dist/pages/CLIPAGE.css?id=${hashId}`)
        else 
            each file in cssFiles
                link(src=`/assets/dist/pages${file}?id=${hashId}`, async)
    body
        include ./utils/new-page.pug
        include ./utils/scripts.pug
        if process.env.NODE_ENV === 'production'
            script(src=`/assets/dist/pages/CLIPAGE.js?id=${hashId}`, async)
        else
            each file in jsFiles
                script(src=`/assets/dist/pages${file}?id=${hashId}`, async)