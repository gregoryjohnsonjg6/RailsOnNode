doctype html
html(lang='en', style={'width': '100%', 'overflow-x': 'hidden'})
    head
        title=`API ${apiVersion} Documentation`
        link(type='image/png', rel='shortcut icon', href=`/favicon`)
        link(rel='stylesheet', type='text/css', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
        style.
            .flex-respond-row {display: flex;flex-direction: column;}@media (min-width: 992px) {.flex-respond-row {display: flex;flex-direction: row;}}
    body(style={'width': '100%', 'overflow-x': 'hidden'})
        .header.p-3.bg-info
            h1.h-100.align-items-center.text-white=`API ${apiVersion} Documentation`
        .card-body.p-3.w-100
            each data in routes
                .card.card-outline-secondary.w-100.flex-respond-row
                    .col-xs-12.col-sm-12-col-md-12.col-lg-6.col-xl-6.p-1
                        .card-header
                            span.mr-1=data.method
                            span=data.route
                        .card-body.p-2
                            h2.h6='Middleware Used: '
                                ul
                                    each ware in data.middleware
                                        li=ware
                            h2.h6='Description: '
                            p=data.description
                    .col-xs-12.col-sm-12-col-md-12.col-lg-6.col-xl-6.p-1
                        .card-header
                            h2.h5='Sample Data'
                        .card-body
                            code(style={'white-space': 'pre', 'overflow': 'auto', 'display': 'block'})
                                span=data.data
        script(src=`/assets/js/docs.js?id=${hashId}`, async)